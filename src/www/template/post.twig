{% extends "_common.twig" %}

{% block main %}
<form method="post" action="">
    <div class="form-group">
        <label for="title">Заголовок</label>
        <input class="form-control" id="title" name="title" placeholder="Введите заголовок новости" maxlength="64" required="required"/>
    </div>
    <div class="form-group">
        <label for="text">Текст новости</label>
        <textarea class="form-control" id="text" name="text" placeholder="Введите текст новости" maxlength="255" required="required"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Разместить</button>
</form>
{% endblock %}
